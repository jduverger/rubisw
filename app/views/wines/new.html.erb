<div align="center">
<h1>Ajouter un vin</h1>
<%# app/views/users/new.html.erb %>

<div class="container">
  <%= form_with(url:"/winesadd", method: :post, class: "wine-form") do |f| %>
    <div class="form-group">
      Etiquette
      <%= f.text_field :nom, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :couleur %>
      <%= f.select :couleur, 
          options_for_select([
            ['rouge', 'rouge'],
            ['blanc', 'blanc'],
            ['rosÃ©', 'rose'],
            ['autre', 'autre']
          ]), 
          { include_blank: 'Select couleur' },
          { class: "form-control" } %>
    </div>
    <div class="form-group">
      <%= f.label :producteur %>
      <%= f.text_field :producteur, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :cru %>
      <%= f.text_field :cru, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :millesime %>
      <%= f.text_field :millesime, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :regions %>
      <%= f.text_field :regions, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :cepage %>
      <%= f.text_field :cepage, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :qte %>
      <%= f.text_field :qte, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :estimation %>
      <%= f.text_field :estimation, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :evaluation %>
      <%= f.text_field :evaluation, class: "form-control" %>
    </div>
    <div class="form-actions">
      <%= f.submit "Ajouter", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
</div>